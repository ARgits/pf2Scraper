{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "vite-plugin-pwa/client"
    ],
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
      "@router/*": [
        "./src/router/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@types": [
        "./src/types.ts"
      ]
    }
  }
}